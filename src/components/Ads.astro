---
// src/components/Ads.astro
const { autoplay = true, muted = true, loop = true } = Astro.props;
---

<style>
  @font-face {
    font-family: 'BNFont';
    src: url('/fonts/bn-font.ttf') format('truetype');
    font-weight: normal;
    font-style: normal;
  }

  .bn-font {
    font-family: 'BNFont', sans-serif;
  }
</style>

<div class="flex flex-col justify-center items-center p-4">
  <video
    class="w-full max-w-2xl md:max-w-3xl lg:max-w-4xl xl:max-w-5xl"
    autoplay={autoplay}
    muted={muted}
    loop={loop}
    playsinline
  >
    <source src="/sys_ad.mp4" type="video/mp4">
  </video>

  <p class="mt-4 text-sm text-gray-600 text-center bn-font"> <!-- Applied custom font here -->
    Interested in advertising with us? Contact us at <a href="mailto:frostfoe@gmail.com" class="text-blue-500 hover:underline">frostfoe@gmail.com</a>.
  </p>
</div>